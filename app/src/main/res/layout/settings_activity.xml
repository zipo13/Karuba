<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background">

    <FrameLayout
        android:id="@+id/settings"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />


    <TextView
        android:id="@+id/title"
        style="@style/GreenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/credits"
        android:textStyle="bold"
        app:layout_constraintBottom_toTopOf="@id/haba_txt"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/haba_txt"
        style="@style/GreenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/haba"
        app:layout_constraintBottom_toTopOf="@id/icons_txt"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/icons_txt"
        style="@style/GreenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/icons_by"
        app:layout_constraintBottom_toTopOf="@id/bg_attribution_txt"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/bg_attribution_txt"
        style="@style/GreenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/background_image_by"
        app:layout_constraintBottom_toTopOf="@id/music_attribution_txt"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/music_attribution_txt"
        style="@style/GreenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:text="@string/music_credit"
        app:layout_constraintBottom_toTopOf="@+id/temple_icon"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/temple_icon"
        style="@style/GreenText"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginBottom="8dp"
        android:text="@string/temple_icon"
        app:layout_constraintBottom_toBottomOf="parent"

        app:layout_constraintStart_toStartOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>